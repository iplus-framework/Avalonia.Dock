<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ItemGroup Condition="'$(UseAvaloniaFork)' == 'False'">
    <PackageReference Include="Avalonia.Diagnostics" Condition="'$(Configuration)' == 'Debug'" />
  </ItemGroup>
  <ItemGroup Condition="'$(UseAvaloniaFork)' == 'True'">
    <Reference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics">
      <HintPath>$(AvaloniaRootDir)\src\Avalonia.Diagnostics\bin\$(Configuration)\$(TargetFramework)\Avalonia.Diagnostics.dll</HintPath>
    </Reference>
  </ItemGroup>
</Project>
